<!DOCTYPE html>
<html lang="en">

<%- include("partials/headerInfo") %>

<body>

  <%- include("partials/navBar") %>
  <hr>

	<div class="container">
  <div class="row justify-content-md-center">
  <fieldset>
    <div class="col-md-auto">
      <img src="<%= userInfo[0].profilePicture %>" alt="" width="150px">
    </div>

    <br>
    
    <div class="col-md-auto text-left">
			<form action="/profile" method="POST">
        
        
				<label>First Name: </label><input type="text" width="40" name="firstName" value="<%=userInfo[0].firstName %>">
				<br>

				<label> Last Name: </label><input type="text" width="40" name="lastName" value="<%=userInfo[0].lastName %>">
				<br>

				<label>Username:</label><input type="text" width="40" name="username" value="<%=userInfo[0].username %>">
				<br>

        <label>Password:</label><input type="text" width="40" name="passwordPlain" value="<%=userInfo[0].passwordPlain %>">
        <br>

				<label>Favorite Food:</label><input type="text" width="40" name="favoriteFood" value="<%= userInfo[0].favoriteFood %>">
				<br>

        <label>Profile Picture:</label><input type="text" width="200" name="profilePicture" placeholder="Image URL" value="<%= userInfo[0].profilePicture %>">
        <br>

        <% if(typeof message != "undefined"){%>
        <%= message %>
        <%}%>
				<br>
				<button class="btn btn-primary">Update Profile</button>
			</form>
    </div>
  </div>
  </fieldset>
</div>

  
<%- include("partials/footerInfo") %>
</body>